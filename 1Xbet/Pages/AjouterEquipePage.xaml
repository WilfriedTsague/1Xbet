<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_1Xbet.Pages.AjouterEquipePage"
             Title="Ajouter une Équipe">

    <StackLayout Padding="10">
        
        <Label Text="Ajouter"
               FontSize="20"
               HorizontalOptions="Center" />

        <Entry x:Name="nomEquipeEntry" Placeholder="Nom de l'équipe" />
        
        <Editor x:Name="descriptionEquipeEntry" Placeholder="Description de l'équipe" />

        <Button x:Name="btnEnregistrer" Text="Ajouter l'équipe" Clicked="AjouterOuModifierEquipe" />
    </StackLayout>
</ContentPage>



